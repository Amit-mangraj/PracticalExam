@model IEnumerable<AzureAssignment.Models.Employee>

@{
    ViewBag.Title = "Get";
}

<h2>List</h2>

<table class="table">
    <tr>

        <th>
            @Html.DisplayName("First Name")
        </th>
        <th>
            @Html.DisplayName("Last Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayName("ResumeURL")
        </th>
        <th>
            @Html.DisplayName("DownloadResume")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.PartitionKey)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RowKey)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Mobile)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Url)
    </td>

    @*<td>
            @Html.ActionLink("Download", "Download", "Home", new { uri = @item.Url }, new { })
        </td>*@
    <td>
        <a href="/Home/Download?name=@item.Url.Split('/').Last()">Download</a>
    </td>
</tr>
}

</table>
