@model PoojagWebapplication.Models.User

@{
    ViewBag.Title = "Index";
}

<h2>Registration Form</h2>


@using (Html.BeginForm("Index", "Home", new { id = Model.RowKey }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <fieldset>
        <legend>Student Form</legend>
        <ol>
            <li>
                <label>First Name</label>
                <input type="text" name="firstname" required="required" value="@Model.FirstName" />
            </li>
            <li>
                <label>Last Name</label>
                <input type="text" name="lastname" value="@Model.LastName" />
            </li>
            <li>
                <label>Email</label>
                <input type="email" name="email" value="@Model.Email" />
            </li>
            <li>
                <label>Mobile</label>
                <input type="text" name="mobile" value="@Model.Mobile" />
            </li>
            <li>
                <label>Address</label>
                <input type="text" name="address" value="@Model.Address" />
            </li>
            <li>
                <label style="margin-right:15px;">Select file </label>
                <input type="file" name="file" value="" />
            </li>

        </ol>
        <input type="submit" value="Submit" />
    </fieldset>
}
<div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
