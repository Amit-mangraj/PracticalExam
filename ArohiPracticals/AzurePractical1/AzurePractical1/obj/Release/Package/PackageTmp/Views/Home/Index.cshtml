@model AzurePractical1.Models.Employee

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <fieldset>
        <legend>Employee Form</legend>
        <ol>
            <li>
                <label>Employee First Name</label>

                <input type="text" name="EmpFName" required="required" value="@Model.RowKey" />
            </li>
            <li>
                <label>Employee Last Name</label>
                <input type="text" name="EmpLName" required="required" value="@Model.PartitionKey" />
            </li>
            <li>
                <label>Email</label>
                <input type="email" name="Email" value="@Model.Email" />
            </li>
            <li>
                <label>Mobile</label>
                <input type="text" name="Mobile" value="@Model.Mobile" />
            </li>
            <li>
                <label>Address</label>
                <input type="text" name="Address" value="@Model.Address" />
            </li>
            <li>
                <label style="margin-right:15px;">Select file </label>
                <input type="file" name="FilePath" value="" />
            </li>
        </ol>
        <input type="submit" value="Submit" />
    </fieldset>
}
